<!-- ios/MokengeliBilokoPOS/Info.plist -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Informations de base de l'application -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    
    <key>CFBundleDisplayName</key>
    <string>Mokengeli Biloko POS</string>
    
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    
    <key>CFBundleSignature</key>
    <string>????</string>
    
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <!-- Configuration de l'orientation -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- Configuration de l'interface utilisateur -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleDefault</string>
    
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <false/>
    
    <!-- Configuration réseau et sécurité (IMPORTANT pour les imprimantes) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <!-- Permettre les connexions non sécurisées pour le développement -->
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        
        <!-- Exceptions spécifiques pour les domaines (production) -->
        <key>NSExceptionDomains</key>
        <dict>
            <!-- Localhost pour le développement -->
            <key>localhost</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
            
            <!-- Réseaux locaux pour les imprimantes -->
            <key>192.168.0.0</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
            
            <key>192.168.1.0</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
            
            <key>10.0.0.0</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
            
            <!-- Domaines de production -->
            <key>api.pos.mokengeli-biloko.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSRequiresCertificateTransparency</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- PERMISSIONS REQUISES POUR L'IMPRESSION -->
    
    <!-- Permission pour le réseau local (iOS 14+) - CRUCIAL pour les imprimantes -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>Cette application a besoin d'accéder au réseau local pour communiquer avec les imprimantes thermiques et découvrir automatiquement les appareils disponibles.</string>
    
    <!-- Protocoles Bonjour pour la découverte d'imprimantes (iOS 14+) -->
    <key>NSBonjourServices</key>
    <array>
        <string>_ipp._tcp</string>
        <string>_printer._tcp</string>
        <string>_pdl-datastream._tcp</string>
        <string>_http._tcp</string>
    </array>
    
    <!-- Permission Bluetooth (pour future implémentation) -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>Cette application utilise le Bluetooth pour se connecter aux imprimantes thermiques Bluetooth.</string>
    
    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Cette application utilise le Bluetooth pour se connecter aux imprimantes thermiques.</string>
    
    <!-- Permission de localisation (nécessaire pour le WiFi/Bluetooth sur iOS) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Cette application utilise votre localisation pour scanner les réseaux WiFi locaux et découvrir les imprimantes disponibles.</string>
    
    <!-- Permission pour les notifications -->
    <key>NSUserNotificationAlertStyle</key>
    <string>alert</string>
    
    <!-- Permission caméra (pour scanner les QR codes des imprimantes) -->
    <key>NSCameraUsageDescription</key>
    <string>Cette application utilise la caméra pour scanner les codes QR de configuration des imprimantes.</string>
    
    <!-- Permission pour les documents (export/import de configurations) -->
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    
    <!-- Fonts personnalisées si nécessaire -->
    <key>UIAppFonts</key>
    <array>
        <string>AntDesign.ttf</string>
        <string>Entypo.ttf</string>
        <string>EvilIcons.ttf</string>
        <string>Feather.ttf</string>
        <string>FontAwesome.ttf</string>
        <string>Foundation.ttf</string>
        <string>Ionicons.ttf</string>
        <string>MaterialCommunityIcons.ttf</string>
        <string>MaterialIcons.ttf</string>
        <string>Octicons.ttf</string>
        <string>SimpleLineIcons.ttf</string>
        <string>Zocial.ttf</string>
    </array>
    
    <!-- Support pour iPad -->
    <key>UIRequiresFullScreen</key>
    <false/>
    
    <!-- Multitasking pour iPad -->
    <key>UISupportsDocumentBrowser</key>
    <false/>
    
    <!-- Capabilities supplémentaires -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
        <string>remote-notification</string>
    </array>
    
    <!-- Version minimum d'iOS -->
    <key>MinimumOSVersion</key>
    <string>13.0</string>
</dict>
</plist>